@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


<div class="container ancho-panel">
    <div class="panel panel-default centrar-panel">
        <!--div class="panel-heading"><h2>Iniciar sesi&oacute;n</h2></div-->
        <div class="panel-body inicio-sesion">
            <form method="post" action="@Url.Action("IniciarSesion", "Login")">
                <div class="box-input">
                    <label for="correo"><b>Correo electr&oacute;nico</b></label>
                    <input class="form-control" type="text" placeholder="Ingrese su direccion de correo" name="correo" maxlength="50" required>
                </div>       

                <div class="box-input">
                    <label for="password"><b>Clave</b></label>
                    <input class="form-control" type="password" placeholder="Ingrese su clave" name="password" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Iniciar sesi&oacute;n</button>
            </form>


            <div class="col-md-12 separador"></div>

            <h4 class="text-center">¿No tienes una cuenta?</h4>
            <a class="btn btn-primary btn-block" href="@Url.Action("Registro")">Registrarse</a>
        </div>
    </div>
</div>

