@model Login.Models.UsuarioLogin

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


<div class="container ancho-panel">
    <div class="panel panel-default centrar-panel">
        <div class="panel-body inicio-sesion">
            <a class="btn btn-primary btn-block" href="@Url.Action("Login")">Iniciar Sesion</a>
            <div class="col-md-12 separador"></div>
            <h4 class="text-center">¿No tienes una cuenta?</h4>
            <a class="btn btn-primary btn-block" href="@Url.Action("Registracion")">Registrarse</a>
        </div>
    </div>
</div>

<div class="row text-center">
    <h2 class="text-primary">La mejor forma de organizar tus tareas! </h2>
    <h4 class="text-info">Aprovecha el tiempo, registrate y descubri todas las ventajas de trabajar con nuestra app!</h4>
</div>

<div class="row text-center">
    <img src="~/Content/Images/logo-unlam.png" height="200" width="200" />
</div> 